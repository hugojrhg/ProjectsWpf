<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="1000">
    <Grid>
        <TextBlock x:Name="Titulo" HorizontalAlignment="Center" FontSize="24" FontFamily="Arial Black" VerticalAlignment="Top" Margin="0,109,0,0" FontStyle="Normal" FontWeight="Normal" TextDecorations="{x:Null}" Grid.IsSharedSizeScope="True"> Bem-Vindo!</TextBlock>
        <TextBlock x:Name="Instrucao" FontFamily="Arial" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Height="25" Grid.IsSharedSizeScope="True"><Run Text="Digite o caminho do arquivo que quer ordenar e pressione o botão"/><Run Language="pt-br" Text="."/></TextBlock>
        <TextBox x:Name="url" InputScope="Url" Margin="100,343,325,67" FontFamily="Arial" Background="#FFE6DEDE" Width="375" Height="24" FontStretch="Expanded" TextWrapping="NoWrap" VerticalContentAlignment="Center" FontSize="16"/>
        <Button x:Name="ordenar" Margin="532,343,164,67" VerticalContentAlignment="Center" FontFamily="Arial" RenderTransformOrigin="0.506,2.831" Width="104" Height="24" FontSize="16" Click="OnClick" ClickMode="Press">Ordenar</Button>
    </Grid>
</Window>
